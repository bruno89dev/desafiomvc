@model IEnumerable<DesafioMVC.Models.Ingrediente>
@{
    ViewData["Title"] = "Lista de Ingredientes";
    Layout = "_Layout";
}
<h2>Lista de Ingredientes</h2>
<hr>
<a asp-action="Adicionar" asp-controller="Ingredientes" class="btn btn-primary">Novo Ingrediente</a>
<hr>

<script>
    $(document).ready(function (){
        $('#ingredientes').DataTable();
    });
</script>

<table id="ingredientes" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações (Admin)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingrediente in Model){
            <tr>
                <td>@ingrediente.Id</td>
                <td>@ingrediente.Nome</td>
                <td><a class="btn btn-primary" href="/Ingredientes/Editar/@ingrediente.Id">Editar</a> 

                <form asp-action="Deletar" asp-controller="Ingredientes" style="display: inline">
                    <input type="hidden" name="id" id="id" value="@ingrediente.Id">
                    <button class="btn btn-danger">Deletar</button>
                </form></td>
            </tr>
        }
    </tbody>
</table>