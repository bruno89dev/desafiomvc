@model DesafioMVC.Models.Ingrediente
@{
    Layout = "_Layout";
}
<h2>Atualizar Ingredientes</h2>
<hr>
<form class="form-horizontal" asp-controller="Ingredientes" asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="Id">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o ingrediente"><br>
    <span asp-validation-for="Nome"></span><br>
    
    <button class="btn btn-primary">Atualizar</button>
</form>