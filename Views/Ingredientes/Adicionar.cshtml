@model DesafioMVC.Models.Ingrediente
@{
    Layout = "_Layout";
}
<h2>Novo Ingrediente</h2>
<hr>
<form class="form-horizontal" asp-controller="Ingredientes" asp-action="Salvar" method="post">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o ingrediente"><br>
    <span asp-validation-for="Nome"></span><br>
    
    <button class="btn btn-primary">Salvar</button>
</form>