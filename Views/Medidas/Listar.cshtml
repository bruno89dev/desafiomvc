@model IEnumerable<DesafioMVC.Models.Medida>
@{
    ViewData["Title"] = "Lista de Medidas";
    Layout = "_Layout";
}
<h2>Lista de Medidas</h2>
<hr>
<a asp-action="Adicionar" asp-controller="Medidas" class="btn btn-primary">Nova Medida</a>
<hr>

<script>
    $(document).ready(function (){
        $('#medidas').DataTable();
    });
</script>

<table id="medidas" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações (Admin)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medida in Model){
            <tr>
                <td>@medida.Id</td>
                <td>@medida.Nome</td>
                <td><a class="btn btn-primary" href="/Medidas/Editar/@medida.Id">Editar</a> 

                <form asp-action="Deletar" asp-controller="Medidas" style="display: inline">
                    <input type="hidden" name="id" id="id" value="@medida.Id">
                    <button class="btn btn-danger">Deletar</button>
                </form></td>
            </tr>
        }
    </tbody>
</table>